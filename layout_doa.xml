<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_custompopup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgsw"
        android:layout_width="275dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:background="@drawable/doasebelummakan"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:id="@+id/btdengar"
            android:background="@drawable/btdengar"
            android:onClick="dengar"
            android:layout_margin="5dp"
            />

        <Button
            android:layout_margin="5dp"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:id="@+id/btkembali"
            android:background="@drawable/btkembali"
            />
    </LinearLayout>


</LinearLayout>